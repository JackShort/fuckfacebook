extends layout

block content
	head
		title #{user.fullname} | @#{user.username}
	body
		.panel.panel-default
			.center-block
				h1 #{user.username}

				if isAuthenticated && user.username == currentUser.username
					button(class="btn btn-default" id="edit" value="Edit Profile")
						span Edit Profile
						span(class="glyphicon glyphicon-wrench")
				else if isAuthenticated && isFollowing
					button(class="btn btn-danger" id="unfollow" value="#{user.username}")
						span Unfollow
				else if isAuthenticated
					button(class="btn btn-primary" id="follow" value="#{user.username}")
						span Follow

	script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
	script(src="/javascripts/main.js")

	style.
		.center-block {
			float: none !important;
			display: block;
			margin-left: auto;
			margin-right: auto;
			text-align: center;
		}
		
		btn:focus,
		btn-default:focus,
		button:focus {
		    outline: none;
		}